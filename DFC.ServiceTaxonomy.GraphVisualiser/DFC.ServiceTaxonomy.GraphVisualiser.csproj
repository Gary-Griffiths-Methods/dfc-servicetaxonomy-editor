<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <Nullable>enable</Nullable>
    <StaticWebAssetBasePath Condition="$(StaticWebAssetBasePath) == ''">/DFC.ServiceTaxonomy.GraphVisualiser</StaticWebAssetBasePath>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Remove="wwwroot\css\overrides.css" />
    <EmbeddedResource Remove="wwwroot\css\webvowl.app.css" />
    <EmbeddedResource Remove="wwwroot\css\webvowl.css" />
    <EmbeddedResource Remove="wwwroot\favicon.ico" />
    <EmbeddedResource Remove="wwwroot\js\d3.min.js" />
    <EmbeddedResource Remove="wwwroot\js\webvowl.app.js" />
    <EmbeddedResource Remove="wwwroot\js\webvowl.js" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="wwwroot\css\overrides.css" />
    <Content Include="wwwroot\css\webvowl.app.css" />
    <Content Include="wwwroot\css\webvowl.css" />
    <Content Include="wwwroot\favicon.ico">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
    </Content>
    <Content Include="wwwroot\js\d3.min.js" />
    <Content Include="wwwroot\js\webvowl.app.js" />
    <Content Include="wwwroot\js\webvowl.js" />
  </ItemGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Neo4j.Driver" Version="4.0.0" />
    <PackageReference Include="OrchardCore.Module.Targets" Version="1.0.0-rc1-*" />
    <PackageReference Include="OrchardCore.Flows" Version="1.0.0-rc1-*" />
    <PackageReference Include="OrchardCore.ContentManagement" Version="1.0.0-rc1-*" />
    <PackageReference Include="OrchardCore.ContentTypes.Abstractions" Version="1.0.0-rc1-*" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\DFC.ServiceTaxonomy.Neo4j\DFC.ServiceTaxonomy.Neo4j.csproj" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="wwwroot\license.txt">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
    </EmbeddedResource>
  </ItemGroup>

</Project>
