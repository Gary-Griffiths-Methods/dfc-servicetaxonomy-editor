<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Warn"
      internalLogFile="App_Data/logs/internal-nlog.txt">

    <extensions>
        <add assembly="NLog.Web.AspNetCore"/>
        <add assembly="OrchardCore.Logging.NLog"/>
        <add assembly="Microsoft.ApplicationInsights.NLogTarget" />
    </extensions>

    <targets>
        <!-- file target -->
        <target xsi:type="File" name="file"
                fileName="${var:configDir}/App_Data/logs/orchard-log-${shortdate}.log"
                layout="${longdate}|${orchard-tenant-name}|${aspnet-traceidentifier}|${event-properties:item=EventId.Id}|${logger}|${uppercase:${level}}|${message} ${exception:format=ToString,StackTrace}"
        />

        <!-- console target -->
        <target xsi:type="Console" name="console" />

        <!-- appInsights target -->
        <target xsi:type="ApplicationInsightsTarget" name="aiTarget">
          <instrumentationKey>${environment:APPINSIGHTS_INSTRUMENTATIONKEY}</instrumentationKey>
          <contextproperty name="threadid" layout="${threadid}" />
        </target>

    </targets>

    <rules>
        <!-- all warnings and above go to the file target -->
        <logger name="*" minlevel="Warn" writeTo="file" />

        <!-- info and above gets written to AI -->
        <logger name="*" minlevel="Info" writeTo="aiTarget" />

        <!-- the hosting lifetime events go to the console -->
        <logger name="Microsoft.Hosting.Lifetime" minlevel="Info" writeTo="console" />

        <logger name="DFC.ServiceTaxonomy.GraphSync.GraphSyncers.MergeGraphSyncer" minlevel="Info" writeTo="file" />
        <logger name="DFC.ServiceTaxonomy.GraphSync.GraphSyncers.DeleteGraphSyncer" minlevel="Info" writeTo="file" />
        <logger name="DFC.ServiceTaxonomy.Neo4j.Log.NeoLogger" minlevel="Info" writeTo="file" />
        <logger name="DFC.ServiceTaxonomy.Neo4j.Services.NeoGraphDatabase" minlevel="Info" writeTo="file" />
        <logger name="DFC.ServiceTaxonomy.GraphSync.Recipes.Executors.CypherCommandStep" minlevel="Info" writeTo="file" />
        <logger name="DFC.ServiceTaxonomy.GraphSync.Recipes.Executors.CypherToContentStep" minlevel="Info" writeTo="file" />
        <logger name="DFC.ServiceTaxonomy.Events.Services.EventGridContentClient" minlevel="Info" writeTo="file" />
    </rules>
</nlog>
